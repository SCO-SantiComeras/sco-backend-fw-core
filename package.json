{
  "name": "sco-backend-fw-core-core-example",
  "version": "0.0.3",
  "description": "",
  "author": "Santiago Comeras Oteo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build-library": "rm -rf ./dist && npm run prebuild && tsc && cp ./libs/sco-backend-fw-core/package.json ./dist/libs/sco-backend-fw-core && cp ./libs/sco-backend-fw-core/README.md ./dist/libs/sco-backend-fw-core && chmod -R 777 ./dist && cp -r ./dist/libs/sco-backend-fw-core/src/* ./dist/libs/sco-backend-fw-core/ && cp -r ./libs/sco-backend-fw-core/src/sco-backend-fw-core/bin/sco-backend-fw-initial.zip ./dist/libs/sco-backend-fw-core/sco-backend-fw-core/bin && cp ./libs/sco-backend-fw-core/package.json ./dist/libs/sco-backend-fw-core/sco-backend-fw-core/bin && rm -rf ./dist/src && rm -rf ./dist/test && rm -rf dist/libs/sco-backend-fw-core/src",
    "start-library": "npm link ./libs/sco-backend-fw-core/ && nest start --watch",
    "install-local-library": "npm i ./dist/libs/sco-backend-fw-core",
    "publish-library": "npm run build-library && npm publish dist/libs/sco-backend-fw-core",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "npm run build-library && npm run install-local-library && nest start",
    "start:dev": "npm run build-library && npm run install-local-library && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@types/validator": "^13.7.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sco-backend-fw-core": "file:dist/libs/sco-backend-fw-core",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/sco-backend-fw-core(|/.*)$": "<rootDir>/libs/sco-backend-fw-core/src/$1"
    }
  }
}
